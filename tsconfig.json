{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "./",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@model/*": ["./src/model/*"],
      "@pipe/*": ["./src/pipe/*"],
      "@service/*": ["./src/service/*"],
      "@src/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
