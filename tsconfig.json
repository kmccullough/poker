{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "paths": {
      "@assets/*": ["../assets/*"],
      "@model/*": ["./model/*"],
      "@pipe/*": ["./pipe/*"],
      "@service/*": ["./service/*"],
      "@src/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
